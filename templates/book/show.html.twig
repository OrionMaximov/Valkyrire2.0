{% extends 'base.html.twig' %}

{% block title %}Livres{% endblock %}

{% block body %}
    <h2>Livres</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ livre.prix }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ livre.auteur }}</td>
            </tr>
            <tr>
                <th>Tome</th>
                <td>{{ livre.tome }}</td>
            </tr>
            <tr>
                <th>Serie</th>
                <td>{{ livre.serie }}</td>
            </tr>
            <tr>
                <th>Isbn</th>
                <td>{{ livre.isbn }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ livre.quantite }}</td>
            </tr>
            <tr>
                <th>Tarif</th>
                <td>{{ livre.tarif }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ livre.etat ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Pervers</th>
                <td>{{ livre.pervers ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ livre.image }}</td>
            </tr>
            <tr>
                <th>Genres</th>
                <td>{{ livre.genres }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_book_index') }}">back to list</a>

    <a href="{{ path('app_book_edit', {'id': livre.id}) }}">edit</a>

    {{ include('book/_delete_form.html.twig') }}
