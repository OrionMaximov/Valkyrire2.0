                        <div class="d-flex justify-content-between align-item-center">
                            <a href="{{ path('livres.detail', {id: livres.id})}} " class="btn btn-dark">View details</a>
                            <span class="h5 mt-auto">{{ livres.prix }} â‚¬</span>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}